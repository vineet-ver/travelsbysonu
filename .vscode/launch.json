{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server/index.ts",
      "runtimeArgs": ["--loader", "tsx"],
      "env": {
        "NODE_ENV": "development",
        "PORT": "5000"
      },
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}